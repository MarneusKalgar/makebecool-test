/*!******************FOOTER******************/
.footer
	position relative
	margin-top 1.1rem
	padding 0 0 3rem
	+above($media-md)
		margin-top 8.1rem
		padding-bottom 1.2rem
	+above($media-lg)
		padding 0 $base-block-padding-xlg 2.5rem
		max-width $base-block-max-width
		margin 8.1rem auto 0
		
		//element ADDRESS
	&__address
		position relative
		font-style normal
		margin-bottom 1.5rem
		+above($media-md)
			margin-bottom 1.4rem
		+above($media-lg)
			flex-container(row, wrap, flex-start, flex-start)
			margin-bottom 4.8rem
		
		//element COL
	&__col
		+above($media-lg)
			width 9rem
			//COL(1)	
		&:nth-child(1)
			.footer__info:nth-child(2)
				margin-top .4rem
			//COL(2)
		&:nth-child(2)
			margin-top .3rem
			+above($media-lg)
				margin 1.9rem 0 0 3.3rem
			//COL(3)
		&:nth-child(3)
			margin-top .2rem
			+above($media-lg)
				margin 2rem 0 0 3.1rem
			//COL(4)
		&:nth-child(4)
			width 15rem
			margin-top 2.1rem
			.footer__link:nth-child(1)
				display inline-block
				margin-bottom .5rem
			+above($media-md)
				position absolute
				right -2rem
				top 0
				margin 0
			+above($media-lg)
				position static
				margin 0 1.3rem 0 auto
	
		//element INFO
	&__info
		margin 0
		&:first-child
			font-weight bold
			text-transform uppercase
		&:last-child
			+above($media-lg)
				width 7.5rem
			
			//element 
		&--made
			margin-top .4rem
			color #999
			font-weight 300
			+above($media-md)
				margin 0
		
		//element LINK
	&__link
		line-height 1rem
		text-decoration none
		font-weight 300
		color $base-color-light-green
		border-bottom .1875rem solid $footer-border-color
		transition all .1s ease .1s
		&:hover
		&:active
				border-bottom-color darken(#ddeccf, 20%)
			
			//modifier TEL
		&--tel
			font-weight normal
			color $base-text-color
			border-bottom none
			&:hover
			&:active
				color lighten(@color, 30%)
				text-shadow .1rem .1rem .05rem rgba($base-text-color, .5)
		
		//element SUBSCRIBE
	&__subscribe
		display none
		+above($media-lg)
			display block
			position absolute
			top 5.5rem
			left 0
			width 8rem
			height 2.5rem
			border .25rem solid $footer-border-color
			background-color #fff
			color $base-color-light-green
			transition all .1s ease .1s
			outline none
			&:hover
			&:focus
				color #000
				background-color darken($footer-border-color, 5%)
				border-color darken($footer-border-color, 15%)
		
		//element ROW
	&__row
		flex-container(column, wrap, space-between, flex-start)
		width 100%
		margin-top 3rem
		padding .8rem 0
		font-size .75rem
		border-top .0625rem solid #eee
		.footer__info //in element ROW 
			text-transform none
			color #999
			font-weight 300
			+above($media-lg)
				width 20rem
				&:last-child
					width 16rem
		+above($media-md)
			flex-direction row
			justify-content space-between
			margin-top 0
		
			