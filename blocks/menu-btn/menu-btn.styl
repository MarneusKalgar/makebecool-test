/*!******************MENU-BTN******************/
.menu-btn
	position relative
	width 1.9rem
	height 1.5rem
	padding 0
	border none
	background transparent
	//overflow hidden
	font-size 0
	appearance none
	border-radius none
	cursor pointer
	&:focus
		outline none
		
	&__barholder
		display block
		position absolute
		left 0
		top .6rem
		width 100%
		height .25rem
		background-color #579e10
		transition background 0 .3s
		&:before
		&:after
			position absolute
			display block
			content ''
			left 0
			width 100%
			height .25rem
			background-color #579e10
			transition-duration .3s, .3s
			transition-delay .3s, 0
			
		&:before
			top -.62rem
			transition-property top, transform
			
		&:after
			bottom -.62rem
			transition-property bottom, transform
	
	&--active
		.menu-btn__barholder
			background none
		.menu-btn__barholder:before
			top 0
			transform-origin 50% 50%
			transform rotate(45deg)
		.menu-btn__barholder:after
			bottom 0
			transform-origin 50% 50%
			transform rotate(-45deg)